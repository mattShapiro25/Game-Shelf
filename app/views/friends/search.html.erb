<h1>Search Results</h1>

<% if @users.any? %>
  <% @users.each do |user| %>
    <div>
      <% if current_user != user %> 
      <%= user.username %>
      <%= button_to "Add Friend", user_friends_path(user_id: current_user.id, friend_id: user.id), method: :post, class: "btn btn-primary" %>
    <% end %>
    </div>
  <% end %>
<% else %>
  <p>No users found matching your search.</p>
<% end %>

<%= button_to "Back to search", new_user_friend_path(current_user), method: :get, class: "btn btn-secondary" %>

